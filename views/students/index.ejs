<%- include('../partials/head') %>
<%- include('../partials/navbar') %>
<h1>All Students <%= students.length %></h1>
<div class="container">
    <div class="row">
        <div class="col-10">
            <div class="row">
                <div class="col-8 offset-2">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% students.forEach(student => { %>
                                <tr>
                                    <td><%= student.student_id %></td>
                                    <td><%= student.first_name %></td>
                                    <td><%= student.last_name %></td>
                                    <td><%= student.email %></td>
                                    <td><a href="/students/profile/<%= student.student_id %>" class="btn btn-info">Profile</a></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-2">
            <a href="/students/create" class="btn btn-danger">New Student</a>
        </div>
    </div>
</div>

<%- include('../partials/bottom') %>