<%- include('../partials/head') %>
<%- include('../partials/navbar') %>
<h1>All Payments <%= sum.total %></h1>
<div class="container">
    <div class="row">
        <div class="col-10">
            <div class="row">
                <div class="col-8 offset-2">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Student</th>
                                <th>Course Title</th>
                                <th>Amount</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% payments.forEach(payment => { %>
                                <tr>
                                    <td><%= payment.payment_id %></td>
                                    <td><%= payment.first_name %> <%= payment.last_name %></td>
                                    <td><%= payment.title %></td>
                                    <td><%= payment.amount %></td>
                                    <td><a href="" class="btn btn-info">More Info</a></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/bottom') %>